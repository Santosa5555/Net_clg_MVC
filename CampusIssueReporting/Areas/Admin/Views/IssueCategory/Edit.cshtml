@model CampusIssueReporting.Models.IssueCategory
@{
    ViewData["Title"] = "Edit Category";
}

<h2>Edit Category</h2>

<form asp-area="Admin" asp-controller="IssueCategory" asp-action="Edit" method="post" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Category Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-area="Admin" asp-controller="IssueCategory" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}