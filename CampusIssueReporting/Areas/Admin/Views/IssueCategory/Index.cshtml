@model IEnumerable<CampusIssueReporting.Models.IssueCategory>
@{
    ViewData["Title"] = "Categories";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Issue Categories</h2>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="IssueCategory" asp-action="Create">Create New</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th style="width:180px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Name</td>
                <td class="d-flex gap-2">
                    <a class="btn btn-sm btn-secondary" asp-area="Admin" asp-action="Edit" asp-route-id="@cat.Id">Edit</a>
                    <a class="btn btn-sm btn-info" asp-area="Admin" asp-action="Details" asp-route-id="@cat.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-area="Admin" asp-action="Delete" asp-route-id="@cat.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
