@model IEnumerable<CampusIssueReporting.Models.ApplicationUser>
@{
    ViewData["Title"] = "Students";
    var page = (int?)ViewData["Page"] ?? 1;
    var pageCount = (int?)ViewData["PageCount"] ?? 1;
    var total = (int?)ViewData["Total"] ?? 0;
    var pageSize = (int?)ViewData["PageSize"] ?? 50;
    var search = ViewData["Search"] as string ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Students (@total)</h2>

    <form class="d-flex" asp-action="Index" method="get">
        <input class="form-control form-control-sm me-2" type="search" name="search" placeholder="Search by name/email/phone" value="@search" />
        <button class="btn btn-sm btn-outline-secondary" type="submit">Search</button>
    </form>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Registered</th>
            <th style="width:210px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.UserName</td>
                <td>@u.Email</td>
                <td>@u.PhoneNumber</td>
                <td>@(u.CreatedAt.ToString("g"))</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-area="Admin" asp-action="Details" asp-route-id="@u.Id">Details</a>
                    <a class="btn btn-sm btn-secondary" asp-area="Admin" asp-action="Edit" asp-route-id="@u.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-area="Admin" asp-action="Delete" asp-route-id="@u.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= pageCount; i++)
        {
            <li class="page-item @(i == page ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@search">@i</a>
            </li>
        }
    </ul>
</nav>
