@{
    ViewData["Title"] = "About Us";
}

<section class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">About Campus Issue Reporting & Resolution Tracker</h1>
        <p class="text-muted">Empowering students and admins to make the campus a better place.</p>
    </div>

    <div class="row align-items-center">
        <div class="col-md-6">
            <img src="~/images/campus.png" alt="Campus" class="img-fluid rounded shadow">
        </div>

        <div class="col-md-6">
            <h3 class="fw-semibold">Our Mission</h3>
            <p>
                The Campus Issue Reporting & Resolution Tracker is designed to simplify how students
                report and track problems within their college environment. From broken infrastructure
                to classroom issues, we help bridge the communication gap between students and administrators.
            </p>

            <h3 class="fw-semibold mt-4">Our Vision</h3>
            <p>
                To build a transparent and efficient complaint management system that promotes accountability,
                faster resolutions, and a more connected campus community.
            </p>
        </div>
    </div>

    <hr class="my-5" />

    <div class="row text-center">
        <div class="col-md-4">
            <i class="bi bi-people fs-1 text-primary"></i>
            <h4 class="mt-3">Student Empowerment</h4>
            <p>Students can voice issues freely and track their resolution progress.</p>
        </div>

        <div class="col-md-4">
            <i class="bi bi-speedometer2 fs-1 text-success"></i>
            <h4 class="mt-3">Efficiency</h4>
            <p>Admins can handle complaints faster with clear dashboards and notifications.</p>
        </div>

        <div class="col-md-4">
            <i class="bi bi-bar-chart-line fs-1 text-warning"></i>
            <h4 class="mt-3">Transparency</h4>
            <p>Every action is logged, ensuring accountability across the system.</p>
        </div>
    </div>

    <div class="text-center mt-5">
        <h5 class="fw-semibold">Developed by</h5>
        <p>
            <strong>Campus IT Development Team</strong>
            <a href="mailto:santosatmg555@gmail.com"
                class="text-decoration-none">santosatmg555@gmail.com</a>
        </p>
    </div>
</section>